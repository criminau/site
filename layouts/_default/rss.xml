
{{- $pctx := . -}}
{{- if .IsHome -}}{{ $pctx = .Site }}{{- end -}}
{{- $pages := slice -}}
{{- if or $.IsHome $.IsSection -}}
{{- $pages = $pctx.RegularPages -}}
{{- else -}}
{{- $pages = $pctx.Pages -}}
{{- end -}}
{{- $limit := .Site.Config.Services.RSS.Limit -}}
{{- if ge $limit 1 -}}
{{- $pages = $pages | first $limit -}}
{{- end -}}



{{- printf "<?xml version=\"1.0\" encoding=\"utf-8\" standalone=\"yes\"?>" | safeHTML }}
<rss version="2.0" xmlns:atom="http://www.w3.org/2005/Atom">
  <channel>
    <title>Subversive</title>
    <language>fr-FR</language>
    <image>
      <url>https://www.subversive.eu/apple-touch-icon.png</url>
      <title>Subversive</title>
      <link>{{ .Permalink }}</link>
    </image>
    <link>{{ .Permalink }}</link>

    {{ with .Site.Params.description }}<description>{{.}}</description>{{end}}
    
    {{ with $.Site.Author.name }}<managingEditor> {{.}}</managingEditor>{{end}}
    {{ with $.Site.Author.name }}<webMaster>{{.}}</webMaster>{{end}}
    {{ with .Site.Copyright }}<copyright>{{.}}</copyright>{{end}}

    {{ if not .Date.IsZero }}
    <lastBuildDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</lastBuildDate>{{ end }}
    {{- with .OutputFormats.Get "RSS" -}}
    {{ printf "<atom:link href=%q rel=\"self\" type=%q />" .Permalink .MediaType | safeHTML }}
    {{- end -}}

    {{ range $pages }}
    <item>
      <title>{{ .Title }}</title>
      <link>{{ .Permalink }}</link>
      <pubDate>{{ .Date.Format "Mon, 02 Jan 2006 15:04:05 -0700" | safeHTML }}</pubDate>
      {{ with .Site.Author.email }}<author>{{.}}{{ with $.Site.Author.name }} ({{.}}){{end}}</author>{{end}}
      <guid>{{ .Permalink }}</guid>
      <!-- Content with Image -->

{{- $content := replaceRE "a href=\"(#.*?)\"" (printf "%s%s%s" "a href=\"" .Permalink "$1\"") .Content -}}
{{- $content = replaceRE "img src=\"(.*?)\"" (printf "%s%s%s" "img src=\"" .Permalink "$1\"") $content -}}
      <description>{{ $content | html }}</description>
      
      <!-- Post individual image from opengraph -->

{{ with .Params.header.image }}{{ $image_location := printf "static/img/%s" .}}{{$image := readFile $image_location }}{{$len := len $image}}<enclosure url="http://yihanwu.ca/img/{{.}}" length="{{$len}}" type="image/png" />{{end}}


{{- if .Params.cover.image -}}
{{- if (ne .Params.cover.relative true) }} <!-- relative: false -->
<enclosure url="{{ .Params.cover.image | absURL }}" lenght="10000" type="image/jpg"></enclosure>
{{- else}} <!-- relative: true -->
{{ with .Params.cover.image }}
{{ $image_location := printf "/static/%s" . }}
{{$image := readFile $image_location }}
{{$len := len $image}}
<enclosure url="http://subversive.eu/{{.}}" length="{{$len}}" type="image/png" />
{{ end }}

{{- end}}
{{- else }}<!-- no cover image but image: - -->

{{ with $.Params.images }}{{ range first 6 . -}}
{{ $image_location := printf "/static/%s" . }}
{{$image := readFile $image_location }}
{{$len := len $image}}
<enclosure url="http://subversive.eu/{{.}}"  length="{{$len}}" type="image/png" />

<enclosure url="{{ . | absURL }}" content="jamais testÃ©" type="image/jpg"></enclosure>

{{ end }}{{ else -}}
{{- $images := $.Resources.ByType "image" -}}
{{- $featured := $images.GetMatch "*feature*" -}}
{{- if not $featured }}{{ $featured = $images.GetMatch "{*cover*,*thumbnail*}" }}{{ end -}}
{{- with $featured -}}
<enclosure url="{{ $featured.Permalink }}"  type="image/jpg"></enclosure>
{{ else -}} <!-- no cover no images, just config .-->


{{- with .Site.Params.imagesdefault -}}

{{ $image_location := printf "/static/%s" . }}
{{$image := readFile $image_location }}
{{$len := len $image}}
<enclosure url="{{ . | absURL }}"  length="{{$len}}" type="image/png" />

{{ end }}{{ end }}{{ end }}
{{- end }}


    </item>
    {{ end }}
  </channel>
</rss>